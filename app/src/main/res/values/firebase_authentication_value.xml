<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="CardViewStyle" parent="Base.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">100dp</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:layout_margin">80dp</item>


    </style>


    <style name="BaseEditText">Enter Email</style>

    <style name="BaseEditText.Email">
        <item name="android:hint" >@string/enter_email</item>
        <item name="background">@color/colorAccent</item>
    </style>

    <style name="BaseEditText.Password">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:hint" >@string/enter_password</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="background">@color/colorAccent</item>
    </style>

    <style name="BaseButton">

    </style>

    <style name="BaseButton.Sign">
        <item name="android:text">@string/signIn</item>
    </style>



    <string name="enter_password">Password</string>
    <string name="signIn">Sign In</string>
</resources>